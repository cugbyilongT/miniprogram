.container {
    padding: 10px;
  }
  
  .section {
    margin-bottom: 20px;
  }
  
  .label {
    display: block;
    margin-bottom: 5px;
  }
  
  .input {
    border: 1px solid #ccc;
    border-radius: 4px;
    padding: 10px;
    width: 100%;
  }
  
  .dropdown {
    position: absolute;
    width: 100%;
    z-index: 10;
    background-color: #fff;
    border: 1px solid #ddd;
    border-radius: 4px;
  }
  
  .dropdown-scroll-view {
    border-top: 1px solid #eee;
  }
  
  .dropdown-item {
    padding: 10px;
    border-bottom: 1px solid #eee;
  }
  
  .dropdown-item:last-child {
    border-bottom: none;
  }