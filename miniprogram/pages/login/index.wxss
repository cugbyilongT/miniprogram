.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx;
}

.logo {
  width: 400rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.app-name {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.app-description {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 60rpx;
}

.input-container {
  position: relative;
  margin-bottom: 50rpx;
  width: 100%;
}

.input-field {
  border: 1rpx solid #ddd;
  border-radius: 10rpx;
  padding: 20rpx;
  font-size: 28rpx;
  width: 100%;
  box-sizing: border-box;
}

.eye-icon {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
}

.forgot-password {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 40rpx;
  text-decoration: underline;
}

.login-btn {
  background-color: #007aff;
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 10rpx;
  width: 100%;
}
/* 其他样式保持不变 */

.input-container {
  display: flex;
  align-items: center;
  border: 1rpx solid #ddd;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 40rpx;
}

.input-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.remember-password {
  display: flex;
  justify-content: flex-start;
  margin-bottom: 20rpx;
}
/* 其他样式保持不变 */

.placeholder {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  left: 90rpx;
  color: #999;
  font-size: 28rpx;
}