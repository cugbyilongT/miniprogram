<view class="container">
  <image class="logo" src="/images/logo.png" style="width: 380px; height: 180px;"></image>
  <!--<text class="app-name">运通水务</text>
  <text class="app-description">YOUNGTUBE智慧作业管理信息系统</text>-->

  <view class="input-container" style="position: relative; left: 1rpx; top: -4rpx; width: 670rpx; height: 137rpx; display: flex; box-sizing: border-box">
    <image class="input-icon" src="/images/account-icon.png"></image>
    <input style="width: 572rpx; height: 81rpx; display: block; box-sizing: border-box" class="input-field" type="text" value="{{account}}" bindinput="bindAccountInput" />
    <view class="placeholder" wx:if="{{!account}}">请输入账号</view>
  </view>

  <view class="input-container" style="width: 668rpx; height: 135rpx; display: flex; box-sizing: border-box; left: 0rpx; top: 0rpx">
    <image class="input-icon" src="/images/password-icon.png"></image>
    <input style="width: 572rpx; height: 72rpx; display: block; box-sizing: border-box" class="input-field" type="{{showPassword ? 'text' : 'password'}}" value="{{password}}" bindinput="bindPasswordInput" />
    <view class="placeholder" wx:if="{{!password}}">请输入密码</view>
    <image class="eye-icon" src="/images/eye-{{showPassword ? 'open' : 'closed'}}.png" bindtap="togglePasswordVisibility"></image>
  </view>

  <checkbox-group bindchange="toggleRememberPassword">
    <view class="remember-password">
      <checkbox value="true" checked="{{rememberPassword}}">记住密码</checkbox>
    </view>
  </checkbox-group>

  <view class="forgot-password" bindtap="showForgotPasswordModal">忘记密码</view>

  <button class="login-btn" bindtap="login">登入</button>
</view>