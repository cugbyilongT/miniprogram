  /* page.wxss */
  .container {
    padding: 20px;
    display: flex;
    flex-direction: column;
    width: 100%; /* 确保容器宽度为100% */
  }
  
  .form-item {
    display: flex;
    align-items: center; /* 垂直居中 */
    margin-bottom: 10px; /* 只设置一次即可 */
    flex-direction: row; /* 显式设置为横向排列 */
    width: 100%; /* 确保父容器宽度为100%，以便子元素有足够空间横向排列 */
  }
  
  .form-label {
    width: 100px; /* 标签固定宽度 */
    font-size: 15px;
    color: #111010;
  }
  
  
  .form-input {
    flex-grow: 1; /* 输入框占据剩余空间 */
  }
  
  
  .form-input input,
  .form-input picker {
    width: 100%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 4px;
  }
  .submit-button {
    width: 100%;              /* 提交按钮宽度调整为100% */
    background-color: #19ca63; /* 按钮背景颜色 */
    color: white;              /* 按钮文字颜色 */
    border: none;              /* 去除边框 */
    padding: 10px 10px;        /* 增加上下内边距 */
    border-radius: 5px;        /* 圆角边框 */
  
    /* 文本居中显示 */
    text-align: center;        /* 水平居中 */
    line-height: normal;       /* 重置行高，可能需要调整具体值 */
    display: flex;             /* 使用flexbox进行布局 */
    justify-content: center;   /* 水平居中 */
    align-items: center;       /* 垂直居中 */
  }
  .dropdown-button {
    display: flex;
    line-height: 30px; /* 设置行高与按钮高度相同 */
    padding-left: 10px; /* 增加左内边距，内容向右移动 */
    background-color: #f9f9f9; /* 浅灰色背景 */
    border: 1px solid #ccc; /* 浅灰色边框 */
    border-radius: 5px; /* 轻微的圆角 */
    cursor: pointer;
    width: 35px; /* 设置按钮的宽度 */
    height: 35px; /* 设置按钮的高度 */
    display: flex;
    justify-content: center; /* 水平居中显示箭头 */
    align-items: center; /* 垂直居中显示箭头 */
    font-size: 16px; /* 调整箭头大小，假设箭头是文本字符 */
    transition: background-color 0.3s, transform 0.3s; /* 添加背景色和变换的过渡效果 */
}
