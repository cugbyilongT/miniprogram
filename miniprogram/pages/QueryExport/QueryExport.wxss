    margin-right: 5px; /* 在复选框和文本之间添加一些间距 */
    
  }
  /* Display options when they should be shown */
  .dropdown-options-active {
    display: block;
  }
  
  /* 确保复选框和其后的文本在同一行内 */
  .checkbox-group label {
    display: flex;
    align-items: center;
    display: flex; /* 使用Flexbox布局 */
    align-items: center; /* 垂直居中对齐 */
