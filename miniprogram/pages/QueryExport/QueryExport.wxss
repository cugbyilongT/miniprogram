  }
  .option-item {
    display: block;
    padding: 5px;
    /* Add additional styles as needed */
  }
  .dropdown-mask {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0); /* 完全透明 */
    z-index: 10; /* 请确保这个值足够高，能覆盖其他内容 */
  }
  
  
