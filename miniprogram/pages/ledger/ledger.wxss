/* page.wxss */
.container {
  padding: 20px;
  flex-direction: column;
  align-items: left;
}

.form-item {
  display: flex;
  align-items: left;
  /* 垂直居中 */
  margin-bottom: 10px;

  flex-direction: row;
  /* 显式设置为横向排列 */

  margin-bottom: 10px;
  width: 100%;
  /* 确保父容器宽度为100%，以便子元素有足够空间横向排列 */
}

.form-label {
  width: 30%;
  /* 标签占用行宽的 30% */
  font-size: 16px;
  color: #111010;

}

.form-input {
  width: 50%;
  /* 输入框占用行宽的 70% */
}

.form-input input,
.form-input picker {
  width: 100%;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 4px;
}

button {
  width: 50%;
  height: 40px;
  /* 设置固定高度为40px */
  padding: 0 1px;
  background-color: #1aad19;
  color: white;
  border-radius: 4px;
  border: none;
}

.checkbox-label {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
  /* 每个复选框项之间的间距 */
}

.checkbox-field {
  margin-right: 5rpx;
  /* 文本和复选框之间的间距 */
}

.submit-button {
  width: 100%;
  /* 提交按钮宽度调整为100% */
  background-color: #19ca63;
  /* 按钮背景颜色 */
  color: white;
  /* 按钮文字颜色 */
  border: none;
  /* 去除边框 */
  padding: 10px 10px;
  /* 增加上下内边距 */
  border-radius: 5px;
  /* 圆角边框 */

  /* 文本居中显示 */
  text-align: center;
  /* 水平居中 */
  line-height: normal;
  /* 重置行高，可能需要调整具体值 */
  display: flex;
  /* 使用flexbox进行布局 */
  justify-content: center;
  /* 水平居中 */
  align-items: center;
  /* 垂直居中 */
}

.img-upload-container {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  /* 确保容器宽度充满父容器 */
  justify-content: flex-start;
  /* 从行的左侧开始对齐子元素 */

}

.upload-row {
  display: flex;
  flex-wrap: wrap;
  flex-direction: column;
}

.upload-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 10px;
  width: 100%;
  /* 考虑到间隙，略小于 25% */
  margin-left: -50px;
}

