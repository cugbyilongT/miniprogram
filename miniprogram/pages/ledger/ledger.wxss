.container {
  padding: 20px;
}

.custom-button-container {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20px;
}

.custom-action-button {
  flex: 1;
  margin: 0 5px;
  padding: 8px;
  /* 缩小按钮的内边距 */
  font-size: 14px;
  background-color: #67bd5f;
  color: white;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  text-align: center;

  /* 使用 Flexbox 居中文本 */
  display: flex;
  align-items: center;
  justify-content: center;
}

.custom-action-button:first-child {
  margin-left: 0;
}

.custom-action-button:last-child {
  margin-right: 0;
}



