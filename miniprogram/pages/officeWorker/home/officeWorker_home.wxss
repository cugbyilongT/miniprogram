.container {
  padding: 20rpx;
}

.header {
  text-align: center;
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}

.search-bar {
  margin-bottom: 30rpx;
}

.search-input {
  background-color: #f5f5f5;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
}

.project-list {
  border: 1px solid #ddd;
  border-radius: 10rpx;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.1);
}

.project-item {
  padding: 20rpx;
  border-bottom: 1px solid #ddd;
}

.project-item:last-child {
  border-bottom: none;
}

.project-name {
  font-size: 32rpx;
}

.empty-tip {
  text-align: center;
  color: #999;
  margin-top: 50rpx;
}